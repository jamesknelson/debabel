.modal-nav
	width: 160px
	float: left
	box-sizing: border-box

	.nav
		li > a
			border-bottom: 1px solid #E5E5E5
			padding: 8px 14px

		i
			float: right
			opacity: .25
		a:hover i
			opacity: .5
		li.active a i
			opacity: 1
		i
			margin-top: 2px

		.badge
			color: #fff
			padding: 4px
			margin: -1px 6px 0 0
			min-width: 14px
			text-align: center
			float: right

.modal-nav + .modal-body
	width: 100%
	margin-right: -160px
	padding-right: 175px
	float: right
	box-sizing: border-box
	min-height: 320px

	border-left: 1px dotted #E5E5E5

.modal-nav + .modal-body + .modal-footer
	clear: both
