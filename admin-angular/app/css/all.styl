@import 'bootstrap-dbl'

hr
	clear: both

.header
	.actions
		padding-top: 13px

		.input-append
			margin-right: 10px

#patterns
	table
		td
			vertical-align: top
		td.player, td.action, td.language
			width: 1px
		td.text
			padding-top: 8px
			a
				color: black

#pattern-editor
	width: 90%
	margin-left: -45%
	height: 90%
	margin-top: -45%

	.modal-body
		padding: 0
	.modal-footer
		text-align: left

		.btn-primary
			float: right
			margin-left: 10px

	.dropdown-toggle.label
		.caret
			margin-top: 5px
			border-top-color: #fff
			border-bottom-color: #fff

	.labels
		list-style: none
		margin: 5px 0 0 5px
		padding: 0
	.labels li a
		float: left
		padding: 5px
		margin: 5px
		min-width: 14px
		text-align: center


[contenteditable]
	padding: 3px
	white-space: nowrap

#structure
	p
		font-size: 18px
		line-size: 24px
		padding: 0 15px

		span.word
			display: inline-block
			border-right: 1px dashed #e0e0e0
			padding: 15px 2px 5px 0
